{
  "name": "@scalar-lab/bitcoin-vault",
  "version": "0.0.12",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "main": "dist/node/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/node/index.js",
      "types": "./dist/index.d.ts"
    },
    "./node": {
      "import": "./dist/node/index.js",
      "require": "./dist/node/index.js",
      "types": "./dist/node/index.d.ts"
    }
  },
  "dependencies": {
    "@mempool/mempool.js": "^2.3.0",
    "@scalar-lab/bitcoin-wasm": "0.0.8",
    "bip174": "^3.0.0-rc.1",
    "bip32": "^5.0.0-rc.0",
    "bitcoin-core-ts": "^3.0.3",
    "bitcoinjs-lib": "^7.0.0-rc.0",
    "ecpair": "^3.0.0-rc.0",
    "tiny-secp256k1": "^2.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "dts-bundle-generator": "^9.5.1",
    "ethers": "^6.13.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "bun build.ts",
    "clean": "rm -rf lib/*",
    "test": "mocha -r ts-node/register test/*.test.ts --exit --no-timeout",
    "lint": "tslint -c tslint.json test/*.ts",
    "fmt": "prettier --tab-width 4 --print-width 120 --parser typescript --write test/*.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "name": "@scalar-lab/bitcoin-vault",
    "access": "public"
  }
}
