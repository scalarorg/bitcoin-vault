{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "rootDir": ".",
    "rootDirs": ["./src", "./test"],
    "types": ["bun-types"]
  },
  "include": ["**/*.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
